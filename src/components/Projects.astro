---
const projects = [
  {
    title: "API Test Automation Suite",
    description: "Comprehensive API testing framework using Cypress and Postman for automated endpoint validation and security testing",
    tech: ["Cypress", "Postman", "JavaScript", "CI/CD"],
    color: "from-blue-500 to-cyan-500",
    features: [
      "Automated API endpoint testing",
      "Security vulnerability scanning",
      "Performance benchmarking",
      "Continuous integration ready"
    ]
  },
  {
    title: "Payment Gateway Security Exploit Simulation",
    description: "Red team simulation environment for testing payment gateway vulnerabilities and security controls",
    tech: ["Python", "Burp Suite", "OWASP", "Security Testing"],
    color: "from-red-500 to-pink-500",
    features: [
      "Simulated attack scenarios",
      "Vulnerability assessment automation",
      "Security control validation",
      "Comprehensive reporting"
    ]
  },
  {
    title: "Log Anomaly Detection System",
    description: "AWS Lambda-based system for detecting anomalies in application logs using Python and machine learning",
    tech: ["AWS Lambda", "Python", "CloudWatch", "Machine Learning"],
    color: "from-green-500 to-emerald-500",
    features: [
      "Real-time log monitoring",
      "Anomaly detection algorithms",
      "Automated alerting system",
      "Scalable serverless architecture"
    ]
  }
];
---

<section id="projects" class="py-20 bg-black">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-3xl sm:text-4xl font-bold text-white mb-4">
        Featured <span class="text-cyan-400">Projects</span>
      </h2>
      <div class="w-24 h-1 bg-gradient-to-r from-cyan-500 to-green-500 mx-auto mb-6"></div>
      <p class="text-gray-400 text-lg max-w-2xl mx-auto">
        Innovative security tools and automation frameworks built for real-world impact
      </p>
    </div>

    <div class="grid lg:grid-cols-3 gap-8">
      {projects.map((project, index) => (
        <div class="group">
          <div class="bg-gray-900/50 backdrop-blur-sm border border-gray-800 rounded-xl p-6 hover:border-cyan-500/50 transition-all duration-300 hover:scale-105 hover:shadow-lg hover:shadow-cyan-500/10 h-full flex flex-col">
            <div class="flex items-center gap-3 mb-4">
              <div class={`w-12 h-12 rounded-lg bg-gradient-to-br ${project.color} flex items-center justify-center`}>
                {index === 0 && (
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-white">
                    <polyline points="16,18 22,12 16,6"></polyline>
                    <polyline points="8,6 2,12 8,18"></polyline>
                  </svg>
                )}
                {index === 1 && (
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-white">
                    <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
                  </svg>
                )}
                {index === 2 && (
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-white">
                    <path d="M18 10h-1.26A8 8 0 1 0 9 20h9a5 5 0 0 0 0-10z"></path>
                  </svg>
                )}
              </div>
              <h3 class="text-xl font-semibold text-white">{project.title}</h3>
            </div>
            
            <p class="text-gray-300 mb-4 leading-relaxed flex-grow">{project.description}</p>
            
            <div class="mb-4">
              <h4 class="text-white font-medium mb-2">Key Features:</h4>
              <ul class="space-y-1">
                {project.features.map((feature) => (
                  <li class="text-gray-400 text-sm flex items-center gap-2">
                    <div class="w-1.5 h-1.5 bg-cyan-400 rounded-full flex-shrink-0"></div>
                    {feature}
                  </li>
                ))}
              </ul>
            </div>
            
            <div class="mb-4">
              <div class="flex flex-wrap gap-2">
                {project.tech.map((tech) => (
                  <span class="bg-cyan-500/20 text-cyan-400 px-2 py-1 rounded-full text-xs font-medium">
                    {tech}
                  </span>
                ))}
              </div>
            </div>
            
            <div class="flex gap-3 pt-4 border-t border-gray-800">
              <button class="flex items-center gap-2 text-cyan-400 hover:text-cyan-300 transition-colors duration-300">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path>
                </svg>
                <span class="text-sm">Code</span>
              </button>
              <button class="flex items-center gap-2 text-cyan-400 hover:text-cyan-300 transition-colors duration-300">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
                  <polyline points="15,3 21,3 21,9"></polyline>
                  <line x1="10" y1="14" x2="21" y2="3"></line>
                </svg>
                <span class="text-sm">Demo</span>
              </button>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>