<!-- Floating Button -->
<button
  id="floating-hire-button"
  class="hidden fixed bottom-8 right-8 bg-gradient-to-r from-cyan-500 to-green-500 hover:from-cyan-400 hover:to-green-400 text-white font-semibold py-3 px-6 rounded-full shadow-lg hover:shadow-xl transition-all duration-300 flex items-center gap-2 z-50 hover:scale-110 animate-pulse"
>
  <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
    <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
    <circle cx="9" cy="7" r="4"></circle>
    <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
    <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
  </svg>
  Hire Me
</button>

<!-- Modal -->
<div id="hire-modal" class="hidden fixed inset-0 bg-black/80 backdrop-blur-sm flex items-center justify-center z-50 p-4">
  <div class="bg-gray-900 border border-gray-800 rounded-2xl p-8 max-w-md w-full relative animate-fade-in">
    <button
      id="close-modal"
      class="absolute top-4 right-4 text-gray-400 hover:text-white transition-colors duration-300"
    >
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <line x1="18" y1="6" x2="6" y2="18"></line>
        <line x1="6" y1="6" x2="18" y2="18"></line>
      </svg>
    </button>

    <div class="text-center">
      <div class="w-16 h-16 bg-gradient-to-br from-cyan-500 to-green-500 rounded-full flex items-center justify-center mx-auto mb-4">
        <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-white">
          <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
          <circle cx="9" cy="7" r="4"></circle>
          <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
          <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
        </svg>
      </div>
      
      <h3 class="text-2xl font-bold text-white mb-4">Let's Work Together!</h3>
      <p class="text-gray-300 mb-6 leading-relaxed">
        Ready to secure your systems and automate your quality processes? 
        Choose the best way to connect with me.
      </p>

      <div class="space-y-3">
        <a
          href="mailto:faiyaz.samin@gmail.com?subject=Hiring Inquiry&body=Hi Sheikh Faiyaz,%0D%0A%0D%0AI'm interested in discussing potential opportunities. Let's connect!"
          class="w-full bg-gradient-to-r from-cyan-500 to-green-500 hover:from-cyan-400 hover:to-green-400 text-white font-semibold py-3 px-6 rounded-lg transition-all duration-300 flex items-center justify-center gap-2 hover:scale-105"
        >
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
            <polyline points="22,6 12,13 2,6"></polyline>
          </svg>
          Send Email
        </a>
        
        <a
          href="https://calendly.com/faiyaz-samin"
          target="_blank"
          rel="noopener noreferrer"
          class="w-full bg-purple-600 hover:bg-purple-500 text-white font-semibold py-3 px-6 rounded-lg transition-all duration-300 flex items-center justify-center gap-2 hover:scale-105"
        >
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
            <line x1="16" y1="2" x2="16" y2="6"></line>
            <line x1="8" y1="2" x2="8" y2="6"></line>
            <line x1="3" y1="10" x2="21" y2="10"></line>
          </svg>
          Schedule Call
        </a>
        
        <a
          href="https://linkedin.com/in/faiyazsamin"
          target="_blank"
          rel="noopener noreferrer"
          class="w-full border-2 border-cyan-500 text-cyan-400 hover:bg-cyan-500 hover:text-white font-semibold py-3 px-6 rounded-lg transition-all duration-300 flex items-center justify-center gap-2 hover:scale-105"
        >
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"></path>
            <rect x="2" y="9" width="4" height="12"></rect>
            <circle cx="4" cy="4" r="2"></circle>
          </svg>
          Connect on LinkedIn
        </a>

        <a
          href="/Sheikh_Faiyaz_Ahmed_CV.pdf"
          download
          class="w-full border-2 border-green-500 text-green-400 hover:bg-green-500 hover:text-white font-semibold py-3 px-6 rounded-lg transition-all duration-300 flex items-center justify-center gap-2 hover:scale-105"
        >
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
            <polyline points="7,10 12,15 17,10"></polyline>
            <line x1="12" y1="15" x2="12" y2="3"></line>
          </svg>
          Download CV
        </a>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const floatingButton = document.getElementById('floating-hire-button');
    const hireModal = document.getElementById('hire-modal');
    const closeModal = document.getElementById('close-modal');
    
    if (floatingButton && hireModal && closeModal) {
      // Show modal when floating button is clicked
      floatingButton.addEventListener('click', function() {
        hireModal.classList.remove('hidden');
      });

      // Hide modal when close button is clicked
      closeModal.addEventListener('click', function() {
        hireModal.classList.add('hidden');
      });

      // Hide modal when clicking outside the modal content
      hireModal.addEventListener('click', function(e) {
        if (e.target === hireModal) {
          hireModal.classList.add('hidden');
        }
      });

      // Hide modal when pressing Escape key
      document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape' && !hireModal.classList.contains('hidden')) {
          hireModal.classList.add('hidden');
        }
      });
    }
  });
</script>

<style>
  .animate-fade-in {
    animation: fadeIn 0.3s ease-out;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: scale(0.9);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }
</style>