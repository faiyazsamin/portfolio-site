</section>

<style>
  /* Remove any existing CSS animations */
  * {
    animation: none !important;
  }
  
  /* Ensure smooth performance */
  .about-header,
  .about-content-left,
  .about-content-right,
  .profile-card {
    will-change: transform, opacity;
  }
  
  /* Optimize for better performance */
  .achievement-item,
  .contact-btn,
  .location-item {
    backface-visibility: hidden;
    perspective: 1000px;
  }
</style>

<script>
  import { gsap } from 'gsap';
  import { ScrollTrigger } from 'gsap/ScrollTrigger';
  
  gsap.registerPlugin(ScrollTrigger);

  document.addEventListener('DOMContentLoaded', () => {
    // Set initial states for About section
    gsap.set('#about h2', { opacity: 0, y: 30 });
    gsap.set('#about .w-24', { opacity: 0, scaleX: 0 });
    gsap.set('#about .space-y-6', { opacity: 0, x: -50 });
    gsap.set('#about .bg-gradient-to-br', { opacity: 0, y: 30, scale: 0.95 });
    gsap.set('#about .flex.items-start.gap-3', { opacity: 0, x: -20 });
    gsap.set('#about .flex.flex-wrap.gap-4 > a', { opacity: 0, y: 20, scale: 0.9 });
    gsap.set('#about .relative > div', { opacity: 0, x: 50, rotationY: 15 });
    gsap.set('#about .w-32', { opacity: 0, scale: 0.8, rotation: -10 });
    gsap.set('#about .text-xl.font-semibold', { opacity: 0, y: 20 });
    gsap.set('#about .bg-green-500\\/20', { opacity: 0, y: 20 });
    gsap.set('#about .space-y-3 > div', { opacity: 0, x: -20 });
    gsap.set('#about .w-3.h-3.bg-green-400', { opacity: 0, scale: 0 });

    // Create About section timeline
    const aboutTl = gsap.timeline({
      scrollTrigger: {
        trigger: '#about',
        start: 'top 80%',
        end: 'bottom 20%',
        toggleActions: 'play none none reverse'
      }
    });

    aboutTl
      // Header animation
      .to('#about h2', {
        opacity: 1,
        y: 0,
        duration: 0.8,
        ease: 'power2.out'
      })
      .to('#about .w-24', {
        opacity: 1,
        scaleX: 1,
        duration: 0.6,
        ease: 'power2.out'
      }, '-=0.3')
      
      // Left content
      .to('#about .space-y-6', {
        opacity: 1,
        x: 0,
        duration: 0.8,
        ease: 'power2.out'
      }, '-=0.4')
      .to('#about .bg-gradient-to-r', {
        opacity: 1,
        y: 0,
        scale: 1,
        duration: 0.7,
        ease: 'power2.out'
      }, '-=0.5')
      // Animate "What I Bring to Your Team" heading first
      .to('#about .text-xl.font-semibold', {
        opacity: 1,
        y: 0,
        duration: 0.6,
        ease: 'power2.out'
      }, '-=0.3')
      // Then animate the bullet points
      .to('#about .flex.items-start.gap-3', {
        opacity: 1,
        x: 0,
        duration: 0.5,
        stagger: 0.1,
        ease: 'power2.out'
      }, '-=0.2')
      .to('#about .flex.flex-wrap.gap-4 > a', {
        opacity: 1,
        y: 0,
        scale: 1,
        duration: 0.5,
        stagger: 0.1,
        ease: 'back.out(1.7)'
      }, '-=0.3')
      
      // Right content
      .to('#about .relative > div', {
        opacity: 1,
        x: 0,
        rotationY: 0,
        duration: 0.8,
        ease: 'power2.out'
      }, '-=0.6')
      .to('#about .w-32', {
        opacity: 1,
        scale: 1,
        rotation: 0,
        duration: 0.6,
        ease: 'back.out(1.7)'
      }, '-=0.4')
      .to('#about .bg-green-500\\/20', {
        opacity: 1,
        y: 0,
        duration: 0.6,
        ease: 'power2.out'
      }, '-=0.3')
      .to('#about .space-y-3 > div', {
        opacity: 1,
        x: 0,
        duration: 0.4,
        stagger: 0.1,
        ease: 'power2.out'
      }, '-=0.4')
      .to('#about .w-3.h-3.bg-green-400', {
        opacity: 1,
        scale: 1,
        duration: 0.3,
        ease: 'back.out(1.7)'
      }, '-=0.2');

    // Add continuous pulse animation for status indicator
    gsap.to('#about .w-3.h-3.bg-green-400', {
      scale: 1.2,
      duration: 1.5,
      repeat: -1,
      yoyo: true,
      ease: 'power2.inOut'
    });

    // Hover animations for contact buttons
    document.querySelectorAll('#about .flex.flex-wrap.gap-4 > a').forEach(btn => {
      btn.addEventListener('mouseenter', () => {
        gsap.to(btn, {
          scale: 1.05,
          duration: 0.3,
          ease: 'power2.out'
        });
      });
      
      btn.addEventListener('mouseleave', () => {
        gsap.to(btn, {
          scale: 1,
          duration: 0.3,
          ease: 'power2.out'
        });
      });
    });
  });
</script>