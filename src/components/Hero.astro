<section id="hero" class="min-h-screen relative overflow-hidden bg-gradient-to-br from-gray-900 via-gray-800 to-black flex items-center justify-center px-4 sm:px-6 lg:px-8">
  <!-- Animated Background Elements -->
  <div class="absolute inset-0 overflow-hidden hero-bg">
    <!-- Gradient Orbs -->
    <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-cyan-500/10 rounded-full blur-3xl hero-orb-1"></div>
    <div class="absolute bottom-1/4 right-1/4 w-96 h-96 bg-green-500/10 rounded-full blur-3xl hero-orb-2"></div>
    
    <!-- Floating Geometric Shapes -->
    <div class="absolute top-20 left-10 w-4 h-4 bg-cyan-400/20 rotate-45 hero-shape-1"></div>
    <div class="absolute top-40 right-20 w-6 h-6 bg-green-400/20 rounded-full hero-shape-2"></div>
    <div class="absolute bottom-40 left-20 w-3 h-3 bg-cyan-300/30 rotate-45 hero-shape-3"></div>
    <div class="absolute bottom-20 right-40 w-5 h-5 bg-green-300/20 rounded-full hero-shape-4"></div>
    
    <!-- Grid Pattern -->
    <div class="absolute inset-0 bg-grid-pattern opacity-5 hero-grid"></div>
  </div>

  <div class="max-w-4xl mx-auto text-center relative z-10">
    <!-- Name - Slide up animation -->
    <div class="mb-8">
      <h1 class="text-4xl sm:text-6xl lg:text-7xl font-bold text-white mb-4 hero-title">
        Sheikh <span class="text-transparent bg-clip-text bg-gradient-to-r from-cyan-400 to-green-400 hero-name">Faiyaz</span> Ahmed
      </h1>
      
      <!-- Tagline - Delayed slide up -->
      <div class="hero-subtitle">
        <h2 class="text-xl sm:text-2xl lg:text-3xl text-gray-300 mb-6 font-light">
          QA Specialist | Security Tester | Automation Expert
        </h2>
        <p class="text-lg sm:text-xl text-gray-400 max-w-3xl mx-auto leading-relaxed mb-4 hero-description">
          "Securing systems, automating quality, and breaking things, before attackers do."
        </p>
        
        <!-- Quick Stats -->
        <div class="flex flex-wrap justify-center gap-6 text-sm text-gray-400 mb-6">
          <div class="flex items-center gap-2 hero-stat">
            <div class="w-2 h-2 bg-green-400 rounded-full"></div>
            <span>5+ Years Experience</span>
          </div>
          <div class="flex items-center gap-2 hero-stat">
            <div class="w-2 h-2 bg-cyan-400 rounded-full"></div>
            <span>200+ Integrations Tested</span>
          </div>
          <div class="flex items-center gap-2 hero-stat">
            <div class="w-2 h-2 bg-green-400 rounded-full"></div>
            <span>AI-Based QA Automation</span>
          </div>
        </div>
      </div>
    </div>
    
    <!-- CTA Buttons - Delayed fade in -->
    <div class="hero-buttons flex flex-col sm:flex-row gap-4 justify-center items-center mb-12">
      <a 
        href="/Sheikh_Faiyaz_Ahmed_CV.pdf" 
        download
        class="hero-btn-primary group bg-gradient-to-r from-cyan-500 to-green-500 hover:from-cyan-400 hover:to-green-400 text-white px-8 py-3 rounded-lg font-semibold transition-all duration-300 flex items-center gap-2 hover:shadow-lg hover:shadow-cyan-500/25 will-change-transform"
      >
        <svg class="hero-btn-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
          <polyline points="7,10 12,15 17,10"></polyline>
          <line x1="12" y1="15" x2="12" y2="3"></line>
        </svg>
        Download CV
      </a>
      <a href="#contact" class="hero-btn-secondary group border-2 border-cyan-500 text-cyan-400 hover:bg-cyan-500 hover:text-white px-8 py-3 rounded-lg font-semibold transition-all duration-300 flex items-center gap-2 will-change-transform">
        <svg class="hero-btn-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
          <polyline points="22,6 12,13 2,6"></polyline>
        </svg>
        Contact Me
      </a>
      <button 
        onclick="window.open('https://calendly.com/faiyaz-samin', '_blank')"
        class="hero-btn-tertiary group border-2 border-green-500 text-green-400 hover:bg-green-500 hover:text-white px-8 py-3 rounded-lg font-semibold transition-all duration-300 flex items-center gap-2 will-change-transform"
      >
        <svg class="hero-btn-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
          <line x1="16" y1="2" x2="16" y2="6"></line>
          <line x1="8" y1="2" x2="8" y2="6"></line>
          <line x1="3" y1="10" x2="21" y2="10"></line>
        </svg>
        Schedule Call
      </button>
    </div>

    <!-- Social Links - Delayed fade in -->
    <div class="hero-social flex justify-center gap-6">
      <a href="mailto:faiyaz.samin@gmail.com" class="hero-social-link text-gray-400 hover:text-cyan-400 transition-all duration-300 will-change-transform" title="Email">
        <svg class="hero-social-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
          <polyline points="22,6 12,13 2,6"></polyline>
        </svg>
      </a>
      <a href="https://linkedin.com/in/faiyazsamin" target="_blank" rel="noopener noreferrer" class="hero-social-link text-gray-400 hover:text-cyan-400 transition-all duration-300 will-change-transform" title="LinkedIn">
        <svg class="hero-social-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"></path>
          <rect x="2" y="9" width="4" height="12"></rect>
          <circle cx="4" cy="4" r="2"></circle>
        </svg>
      </a>
      <a href="https://github.com/faiyazsamin" target="_blank" rel="noopener noreferrer" class="hero-social-link text-gray-400 hover:text-cyan-400 transition-all duration-300 will-change-transform" title="GitHub">
        <svg class="hero-social-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path>
        </svg>
      </a>
    </div>
  </div>
</section>

<style>
  /* Remove any existing CSS animations */
  * {
    animation: none !important;
  }
  
  /* Performance optimizations */
  .hero-title,
  .hero-subtitle,
  .hero-description,
  .hero-buttons,
  .hero-social,
  .hero-bg {
    will-change: transform, opacity;
  }
  
  .hero-orb-1,
  .hero-orb-2,
  .hero-shape-1,
  .hero-shape-2,
  .hero-shape-3,
  .hero-shape-4 {
    backface-visibility: hidden;
    perspective: 1000px;
  }
  
  .hero-name {
    background-size: 200% 200%;
  }
  
  /* Grid pattern */
  .bg-grid-pattern {
    background-image: 
      linear-gradient(rgba(6, 182, 212, 0.1) 1px, transparent 1px),
      linear-gradient(90deg, rgba(6, 182, 212, 0.1) 1px, transparent 1px);
    background-size: 20px 20px;
  }
</style>

<script>
  import { gsap } from 'gsap';
  import { ScrollTrigger } from 'gsap/ScrollTrigger';
  
  gsap.registerPlugin(ScrollTrigger);

  document.addEventListener('DOMContentLoaded', () => {
    // Set initial states
    gsap.set('.hero-title', { opacity: 0, y: 50, scale: 0.95 });
    gsap.set('.hero-subtitle', { opacity: 0, y: 30 });
    gsap.set('.hero-description', { opacity: 0, y: 20 });
    gsap.set('.hero-stat', { opacity: 0, y: 20, scale: 0.9 });
    gsap.set('.hero-buttons > *', { opacity: 0, y: 30, scale: 0.95 });
    gsap.set('.hero-social-link', { opacity: 0, y: 20, scale: 0.9 });
    gsap.set('.hero-orb-1, .hero-orb-2', { opacity: 0, scale: 0.8 });
    gsap.set('.hero-shape-1, .hero-shape-2, .hero-shape-3, .hero-shape-4', { 
      opacity: 0, 
      scale: 0.5,
      rotation: 0 
    });
    gsap.set('.hero-grid', { opacity: 0 });

    // Create main timeline
    const tl = gsap.timeline({
      defaults: {
        ease: 'power3.out',
        duration: 1.2
      }
    });

    // Background elements
    tl.to('.hero-grid', { opacity: 0.05, duration: 0.8 }, 0)
      .to('.hero-orb-1', { opacity: 1, scale: 1, duration: 1.5 }, 0.2)
      .to('.hero-orb-2', { opacity: 1, scale: 1, duration: 1.5 }, 0.4)
      .to('.hero-shape-1', { opacity: 1, scale: 1, rotation: 45, duration: 0.8 }, 0.6)
      .to('.hero-shape-2', { opacity: 1, scale: 1, duration: 0.8 }, 0.7)
      .to('.hero-shape-3', { opacity: 1, scale: 1, rotation: 45, duration: 0.8 }, 0.8)
      .to('.hero-shape-4', { opacity: 1, scale: 1, duration: 0.8 }, 0.9)
      
      // Main content
      .to('.hero-title', { opacity: 1, y: 0, scale: 1, duration: 1 }, 0.3)
      .to('.hero-subtitle', { opacity: 1, y: 0, duration: 0.8 }, 0.6)
      .to('.hero-description', { opacity: 1, y: 0, duration: 0.8 }, 0.8)
      .to('.hero-stat', { 
        opacity: 1, 
        y: 0, 
        scale: 1, 
        stagger: 0.1,
        duration: 0.6 
      }, 1)
      .to('.hero-buttons > *', { 
        opacity: 1, 
        y: 0, 
        scale: 1, 
        stagger: 0.1,
        duration: 0.8 
      }, 1.2)
      .to('.hero-social-link', { 
        opacity: 1, 
        y: 0, 
        scale: 1, 
        stagger: 0.05,
        duration: 0.6 
      }, 1.4);

    // Continuous animations
    gsap.to('.hero-orb-1', {
      rotation: 360,
      duration: 20,
      repeat: -1,
      ease: 'none'
    });

    gsap.to('.hero-orb-2', {
      rotation: -360,
      duration: 25,
      repeat: -1,
      ease: 'none'
    });

    gsap.to('.hero-shape-1, .hero-shape-3', {
      rotation: 405,
      duration: 10,
      repeat: -1,
      ease: 'none'
    });

    gsap.to('.hero-shape-2, .hero-shape-4', {
      y: -10,
      duration: 3,
      repeat: -1,
      yoyo: true,
      ease: 'power2.inOut'
    });

    // Gradient animation for name
    gsap.to('.hero-name', {
      backgroundPosition: '200% center',
      duration: 3,
      repeat: -1,
      ease: 'none'
    });

    // Hover effects for buttons
    document.querySelectorAll('.hero-btn-primary, .hero-btn-secondary, .hero-btn-tertiary').forEach(btn => {
      btn.addEventListener('mouseenter', () => {
        gsap.to(btn, { scale: 1.05, duration: 0.3, ease: 'power2.out' });
        gsap.to(btn.querySelector('.hero-btn-icon'), { 
          rotation: 360, 
          duration: 0.6, 
          ease: 'power2.out' 
        });
      });
      
      btn.addEventListener('mouseleave', () => {
        gsap.to(btn, { scale: 1, duration: 0.3, ease: 'power2.out' });
        gsap.to(btn.querySelector('.hero-btn-icon'), { 
          rotation: 0, 
          duration: 0.6, 
          ease: 'power2.out' 
        });
      });
    });

    // Enhanced hover effects for social links
    document.querySelectorAll('.hero-social-link').forEach(link => {
      link.addEventListener('mouseenter', () => {
        gsap.to(link, { 
          scale: 1.2, 
          rotation: 12, 
          duration: 0.3, 
          ease: 'power2.out' 
        });
        gsap.to(link.querySelector('.hero-social-icon'), { 
          rotation: 360, 
          duration: 0.8, 
          ease: 'power2.out' 
        });
      });
      
      link.addEventListener('mouseleave', () => {
        gsap.to(link, { 
          scale: 1, 
          rotation: 0, 
          duration: 0.3, 
          ease: 'power2.out' 
        });
        gsap.to(link.querySelector('.hero-social-icon'), { 
          rotation: 0, 
          duration: 0.8, 
          ease: 'power2.out' 
        });
      });
    });

    // Parallax effect on scroll
    gsap.to('.hero-bg', {
      yPercent: -50,
      ease: 'none',
      scrollTrigger: {
        trigger: '#hero',
        start: 'top top',
        end: 'bottom top',
        scrub: true
      }
    });
  });
</script>